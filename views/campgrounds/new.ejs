<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Add New Campground</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Enter CG name..." name="cgname">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="Enter price here..." name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Paste image URL here..." name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Enter description here..." name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>